<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

    <record id="product_product_view_kanban" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_kanban_view"/>
        <field name="arch" type="xml">
            <field name="image_small" position="replace">
                <field name="image_main_small_url"/>
            </field>
            <xpath expr="//img[@class='oe_kanban_image']" position="replace">
                <img t-att-src="record.image_main_small_url.value" class="oe_kanban_image"/>
            </xpath>
        </field>
    </record>

</data>
</openerp>
