<odoo>

    <record id="product_packaging_form_view" model="ir.ui.view">
        <field name="name">product.packaging.form (in product_packaging_default)</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='qty']" position="before">
                <field name="is_default"/>
            </xpath>
        </field>
    </record>

    <record id="product_packaging_tree_view2" model="ir.ui.view">
      <field name="name">product.packaging.tree.view (in product_packaging_default)</field>
      <field name="model">product.packaging</field>
      <field name="inherit_id" ref="product.product_packaging_tree_view2"/>
      <field name="arch" type="xml">
          <xpath expr="//tree" position="inside">
              <field name="is_default" string="Default Packaging" class="text-right"/>
              <button
                  name="action_set_is_default"
                  type="object"
                  class="oe_stat_button oe_edit_only text-left"
                  icon="fa-check"
                  string="Define as default packaging"
                  attrs="{'invisible': [('is_default', '=', True)]}"
              />
          </xpath>
      </field>
    </record>



</odoo>
