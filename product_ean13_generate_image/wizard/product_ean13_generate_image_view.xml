<openerp>
<data>

<record id="product_ean13_generate_image_form" model="ir.ui.view">
    <field name="name">product.ean13.generate.image.form</field>
    <field name="model">product.ean13.generate.image</field>
    <field name="arch"  type="xml">
        <form string="Generate EAN13 image">
            <group name="main">
                <field name="state" invisible="1"/>
                <field name="ean13"/>
                <field name="image_format" states="draft"/>
                <field name="width" states="draft"/>
                <field name="height" states="draft"/>
                <field name="with_text" states="draft"/>
                <field name="dpi" states="draft"/>
                <field name="image" states="done" filename="filename"/>
                <field name="filename" invisible="1"/>
            </group>
            <footer>
                <button name="generate_image" string="Generate"
                    type="object" class="oe_highlight" states="draft"/>
                <button special="cancel" string="Cancel" states="draft" class="oe_link"/>
                <button special="cancel" string="Close" states="done"/>
            </footer>
        </form>
    </field>
</record>

<act_window
    id="product_ean13_generate_image_action"
    name="Generate EAN13 Image"
    res_model="product.ean13.generate.image"
    src_model="product.product"
    view_mode="form"
    target="new"
    key2="client_action_multi" />

</data>
</openerp>
